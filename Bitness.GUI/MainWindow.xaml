<Window x:Class="Bitness.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bitness.GUI"
        mc:Ignorable="d"
        Title="Bitness" Height="280" Width="500" MinHeight="280" MinWidth="400"
        AllowDrop="True" DragOver="Window_DragOver" Drop="Window_Drop"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Instruction Text (visible when no file is loaded) -->
        <TextBlock x:Name="InstructionText" Grid.Row="0" 
                   Text="Drag an EXE or DLL file here, or click to browse..." 
                   FontSize="14" FontStyle="Italic" Foreground="Gray"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextAlignment="Center" TextWrapping="Wrap"/>
        
        <!-- File Information (visible when file is loaded) -->
        <StackPanel x:Name="FileInfoPanel" Grid.Row="0" Visibility="Collapsed"
                    VerticalAlignment="Center">
            <TextBlock x:Name="FilePathText" FontSize="12" Foreground="DarkBlue"
                       TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock x:Name="ArchitectureText" FontSize="16" FontWeight="Bold"
                       Foreground="DarkGreen"/>
        </StackPanel>
        
        <!-- Error Text (visible when there's an error) -->
        <TextBlock x:Name="ErrorText" Grid.Row="1" 
                   Foreground="Red" FontSize="12" TextWrapping="Wrap"
                   Margin="0,10,0,0" Visibility="Collapsed"/>
        
        <!-- Status Text -->
        <TextBlock x:Name="StatusText" Grid.Row="2" 
                   Text="Ready" FontSize="10" Foreground="Gray"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
